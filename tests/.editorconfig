# EDITOR CONFIG FOR UNIT TESTS

[*.cs]

# SA1600: Elements should be documented - not necessary in unit tests, given their nature
dotnet_diagnostic.SA1600.severity = none

# CS1591: Missing XML comment for publicly visible type or member - not necessary in unit tests, given their nature
dotnet_diagnostic.CS1591.severity = none

# SA1133: Do not combine attributes - in tests, it's usual to add [Theory, AutoData] instead of using two lines
# TODO: See if we can configure it to work only with Theory attributes
dotnet_diagnostic.SA1133.severity = none

# CA1707: Identifiers should not contain underscores - Required for test names
dotnet_diagnostic.CA1707.severity = none
